{
  "manifest_version": 3,
  "name": "TigerCat - Canvas AI Assistant",
  "version": "1.0.0",
  "description": "TigerCat AI Assistant - Your helpful AI chat companion",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  
  "host_permissions": [
    "*://*.instructure.com/*"
  ],
  
  "action": {
    "default_title": "TigerCat AI Assistant"
  },
  
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  

  
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*"
      ],
      "js": ["content/canvas-detector.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  }
}